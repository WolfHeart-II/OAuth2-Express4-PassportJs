block form
  #login-overlay.modal-dialog
    #my_login_modal.modal-content
      .modal-header
        h4#myModalLabel.modal-title
          | Entre no 
          b Cultura
        |  Desenvolvido por 
        a(target='_blank', href='http://lavid.ufpb.br/pt/quem_somos') LAViD
        | .
      .modal-body
        .row.center-block
          #my_login_block.col-xs-10.center-block
            .well.col-md-12

              .form-signin
                if message != ""
                  .alert.alert-danger.animated.fadeIn
                    button.close(type='button', data-dismiss='alert') Ã—
                    div= message

                form.form-signin(action="/users/session", method="post", role="form")
                  input(type='hidden', name='_csrf', value=_csrf)
                  .list-group
                    .list-group-item
                      input.form-control.no-border(type='text', autocomplete="off" placeholder='Email', name="email")
                    .list-group-item
                      input.form-control.no-border(type='password', placeholder='Password', name="password")

                  button.btn.btn-lg.btn-primary.btn-block.btn-login(type='submit') Sign in

                  a(href="forgot-password" class="forgot-password") Forgot Password

                  .row.m-b
                    a.btn.btn-lg.btn-twitter(href="/auth/twitter")
                      i.fa.fa-fw.fa-twitter
                      | &nbsp; Sign in with Twitter

                  .row.m-b
                    a.btn.btn-lg.btn-facebook(href="/auth/facebook")
                      i.fa.fa-fw.fa-facebook
                      | &nbsp; Sign in with Facebook

                  div.clearfix

                  p.line.line-dashed

                  p.text-muted.text-center
                    small Do not have an account?
                  a.btn.btn-lg.btn-default.btn-block(href='/signup') Create an account
                